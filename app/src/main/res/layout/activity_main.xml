<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHighlight="@color/bright_foreground_material_light"
        android:text="" />

    <TextView
        android:id="@+id/idTxt"
        android:layout_below="@+id/textView_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/datTypTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/rawDatBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rawbtn"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/ascBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asc"
        android:layout_above="@+id/rawDatBtn"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/hexBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hex"
        android:layout_above="@+id/rawDatBtn"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
